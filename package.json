{
  "name": "react-styling",
  "version": "1.0.6",
  "description": "Transforms CSS-alike text into a React style JSON object",
  "main": "build-modules/index.js",
  "dependencies": {},
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-core": "^5.6.15",
    "babel-loader": "^5.3.1",
    "chai": "^3.0.0",
    "html-webpack-plugin": "^1.6.0",
    "istanbul": "^0.3.17",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "webpack": "^1.10.1",
    "webpack-merge": "^0.1.2"
  },
  "scripts": {
    "test": "mocha --compilers js:babel/register --bail --reporter spec test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot test/",
    "test-travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec test/",
    "gh-pages": "TARGET=gh-pages webpack --config ./config",
    "deploy-gh-pages": "TARGET=gh-pages node ./config/deploy-gh-pages.js",
    "build": "TARGET=build webpack && TARGET=build-minified webpack",
    "build-modules": "babel ./source --out-dir ./build-modules",
    "preversion": "npm run test && npm run build && npm run build-modules && git commit --all --message=\"Update build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halt-hammerzeit/react-style.git"
  },
  "keywords": [
    "react",
    "style",
    "inline",
    "css"
  ],
  "author": "Nikolay Kuchumov <kuchumovn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halt-hammerzeit/react-styler/issues"
  },
  "homepage": "https://github.com/halt-hammerzeit/react-styler#readme",
  "// npm config and webpack config was adopted from this guide": "http://survivejs.com/webpack_react/authoring_libraries/",
  "// npm config and webpack config was adopted from this repo": "https://github.com/survivejs/react-component-boilerplate/"
}
